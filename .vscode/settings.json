{
  // VS Code custom 
  "css.customData": [
    ".vscode/tailwind.json"
  ],
  
  // VS Code Assistants
  "CodeGPT.apiKey": "CodeGPT Plus Beta",

  // Hide directories and files
  "files.exclude": {
    "**/node_modules": true,
    "**/.nuxt": true,
    "**/bun.lockb": true,
    "**/dist": true,
    "**/tsconfig.json": true,
  },

  // VS Code Performance
  //"breadcrumbs.enabled": false,
  //"editor.codeLens": false, // enable when working in a team
  //"search.searchOnType": false,
  "terminal.integrated.gpuAcceleration": "on",
  "CodeGPT.Autocomplete.provider": "Ollama - codegpt/deepseek-coder-1.3b-typescript",
  "CodeGPT.Autocomplete.enabled": true,
  "cSpell.words": [
    "nuxt",
    "Nuxt"
  ]
}
